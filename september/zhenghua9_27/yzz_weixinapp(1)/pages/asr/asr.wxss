}

/* 弹幕 */

.button {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.aon {
    position: absolute;
    white-space: nowrap;
    animation-timing-function: linear;
    animation-fill-mode: none;
}

.doommview {
    z-index: 3;
    height: 80%;
    width: 100%;
    /*  position: absolute;  */
}

@keyframes first {
    from {
        left: 100%;
    }

    to {
        left: -100%;
    }
}
