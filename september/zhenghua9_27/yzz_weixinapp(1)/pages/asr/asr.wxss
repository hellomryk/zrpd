}

.word-list {
    width: 100%;
    max-height: 1100rpx;
    position: absolute;
    top: 0;
    left: 100%;
    background: #fff;
    z-index: 98;
    overflow-y: scroll;
}

.list {
    font-size: 35rpx;
    width: 94%;
    text-indent: 10rpx;
    margin: 20rpx 3%;
    color: #5caac1;
    text-decoration: underline;
}

.text-box {
    display: none;
}

.container {
    width: 100%;
    background: #fff;
    height: 1150rpx;
    overflow-x: hidden;
    overflow-y: scroll;
    position: relative;
}

.text-box-normal-left {
    float: left;
    width: 92%;
    color: #adadad;
    background: #e5e5e4;
    margin-left: 4%;
