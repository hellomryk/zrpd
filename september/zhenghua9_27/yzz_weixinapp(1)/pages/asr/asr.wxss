    overflow-y: scroll;
}

.text-box-normal-left-text {
    font-size: 30rpx;
    line-height: 50rpx;
}

.text-box-normal-right {
    width: 180rpx;
    float: left;
    background: #e5e5e4;
    margin-left: 10rpx;
    min-height: 1070rpx;
    line-height: 75rpx;
    text-align: center;
    padding-top: 30rpx;
    padding-left: 10rpx;
}

.text-box-normal-right-btn {
    background: none;
    border: none;
    width: 100%;
    font-size: 30rpx;
    color: #989899;
    text-align: left;
