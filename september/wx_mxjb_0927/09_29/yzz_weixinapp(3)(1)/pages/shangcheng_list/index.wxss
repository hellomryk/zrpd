.shangcheng_head_list{white-space: nowrap; display: flex;width: 100%;height: 95rpx;padding:0 3%;background:#fff;border-bottom:1rpx solid #E7E7E7;box-sizing: border-box;}
.shangcheng_head_li{ display: inline-block;height: 95rpx;line-height: 95rpx;padding:0 27rpx;font-size: 28rpx;color: #000;}
.li_y{border-bottom:1px solid #15c86c;color: #15c86c;}
.shangcheng_move{width: 100%;border-bottom:1rpx solid #E7E7E7;background:#fff;height: 74rpx;line-height: 74rpx;font-size: 28rpx;}
.shangcheng_move_li{display: inline-block;width: 33%;text-align: center;color: #999;}
.li_o{color: #15c86c;}
.shangcheng_cont{background: #F6F6F6;padding: 20rpx 0;}
.shangcheng_cont_list{width: 94%;margin: 0 auto;}
.shangcheng_cont_li{float: left;margin-bottom: 20rpx;width: 340rpx;background: #fff;padding-bottom: 30rpx;}
.shangcheng_cont_li image{width: 340rpx;height: 340rpx;}
.shangcheng_cont_li:nth-child(odd){margin-right: 20rpx;}
.xianjia{font-size: 28rpx;color: #F00101;font-weight: 600;margin-left: 20rpx;line-height: 35rpx;}
.yuanjia{font-size: 20rpx;color: #B3B3B3;text-decoration:line-through ;margin-left: 10rpx;line-height: 35rpx;}
.baoyou{font-size: 20rpx;padding: 5rpx 10rpx;background:#15c86c;color: #fff;border-radius: 10rpx; margin-left: 20rpx;line-height: 35rpx;}
.shengcheng_name{font-size: 28rpx;color: #000;line-height: 35rpx;padding: 0 20rpx;}
.shengcheng_ps{font-size: 20rpx;color: #999;line-height: 35rpx;padding: 0 20rpx;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
page {
  background:#F6F6F6;
