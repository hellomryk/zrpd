}
.sp_go image{
    width: 60rpx;
    height: 52rpx;
    margin-top: 19rpx;
    margin-left: 25rpx;
}
.sp_sub{
    width: 84%;
    height: 90rpx;
    background: #15c86c;
    float: left;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
}
.dou_num{
    width: 30rpx;
    height: 30rpx;
    background: #FD522A;
    color: #fff;
    text-align: center;
    line-height: 30rpx;
    border-radius: 100%;
    position: absolute;
    right:20rpx;
    top:15rpx;
    font-size: 20rpx;

}
.shoping_time{
    font-size: 24rpx;
    color: #fff;
    background: #15c86c;
    padding: 5rpx 10rpx;
    border-radius: 6rpx;
    margin-right: 25rpx;
}

.good_box {
  width: 40px;
  height: 40px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 5%;
  top: 30%;
  z-index: +99;
  background: rgba(120, 188, 255, 0.2);
}
.good_box image {
  display: block;
  width: 100%;
  height: 100%;
}