}
.shoping_xl{
     color: #666;
     font-size: 24rpx;
     margin-left: 50%;
}
.shoping_js{
    margin-top: 40rpx;
    width: 100%;
    padding: 50rpx 30rpx;
    padding-bottom: 150rpx;
    box-sizing: border-box;
    background: #fff;
}
.sh_name,.sh_ps{
    font-size: 28rpx;
     color: #666;
     display: inline-block;
     line-height: 40rpx;
      text-align: left;
      float:left;
      line-height: 50rpx;
}
.sh_name{
    width: 26%;
    text-indent:-10rpx;
}
.sh_ps{
    width: 70%;
}
.sp_submit{
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
}
.sp_go{
    position: relative;
    width: 16%;
