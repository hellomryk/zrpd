page {
    overflow-y: hidden;
}

.container {
}

.login_img {
    width: 100%;
    height: 1300rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.login_content {
    width: 100%;
    height: 1300rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    background: rgba(0, 0, 0, 0.65);
}
.login_box{
    width: 100%;
    box-sizing: border-box;
    padding: 0 90rpx;
}
.login_name{
    width: 100rpx;
    height: 100rpx;
    background:#F89E34;
    border-radius: 50%;
    line-height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
    margin-top: 100rpx;
    margin-bottom: 30rpx;
}
.login_text{
    line-height: 75rpx;
    color: #fff;
    font-size: 50rpx;
}
#login_id{
    width: 100%;
    border-bottom: 1px solid #ccc;
    margin: 30rpx 0;
    color: #fff;
    padding: 30rpx 0;
}
#login_password{
     width: 100%;
    border-bottom: 1px solid #ccc;
    padding: 30rpx 0;
    color: #fff;
}
.login_submit_no{
    margin-top: 45rpx;
     background: rgba(134,134,134, 0.8);
     color:#9D9D9E;
}
.login_submit{
    margin-top: 45rpx;
     background:#F89E34;
     color:#fff;
}
