/**index.wxss**/

.list_box {
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    position: relative;
}

#list_search {
    width: 90%;
    height: 65rpx;
    background: #eee;
    border-radius: 4rpx;
}

.list_add_img {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 40rpx;
    top: 12rpx;
    z-index: 1;
}

.list_se_img {
    width: 28rpx;
    height: 25rpx;
    position: absolute;
    left: 60rpx;
    top: 20rpx;
    z-index: 1;
}

.list_xinxi_img {
    width: 100rpx;
    height: 100rpx;
    float: left;
}

.list_ul {
    margin-top: 20rpx;
}

.list_li {
    padding: 15rpx 0;
    border-bottom: 1px solid #eee;
    position: relative;
}

.list_title {
    width: 80%;
    float: left;
    font-size: 32rpx;
    line-height: 40rpx;
    color: #000;
    margin-top: 15rpx;
    margin-left: 20rpx;
}

.list_jj {
    width: 80%;
    float: left;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #adadad;
    margin-left: 20rpx;
}

.clear {
    clear: both;
}

.list_time {
    position: absolute;
    right: 0;
    top: 20rpx;
    font-size: 24rpx;
    color: #adadad;
}
.list_num{
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: #F63B3B;
    line-height: 30rpx;
    text-align: center;
     position: absolute;
    right: 0;
    bottom: 30rpx;
    font-size: 18rpx;
    color: #fff;
}