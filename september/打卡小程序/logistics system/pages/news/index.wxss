.container{ width: 100%;height: auto; background: #EEEEEE;}


/* 底部 */
.is_checked {
    display: block;
}

.normal {
    display: none;
}

.word-dejp {
    height: 98rpx;
    border-top: 1rpx solid #ddd;
    background: #fff;
    border-bottom: 1px solid #ddd;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 999;
}
.word-deimg {
    width: 64rpx;
    height: 64rpx;
    float: left;
    margin-top: 20rpx;
    margin-left: 20rpx;
}
.word-deBtn {
    width: 80%;
    height: 64rpx;
    display: inline-block;
    font-size: 28rpx;
    line-height: 64rpx;
    color: #A2A2A2;
    float: left;
    margin-top: 20rpx;
    margin-left: 25rpx;
    background-color: #fff;
}
