                    title: "账户充值",
                    type: 1,
                    content: strVar,
                    area: ['418px', '418px'],
                    cancel: function (index, layero) {
                        var param = {};
                        param.orderno = data.payno;
                        param.ordertype = type;
                        param.dataType = "json";
                        $.ajax({
                            url: "/ToolMember/Member/GetPayResult",
                            data: param,
                            type: "get",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == 1) {
                                } else {
                                    layer.confirm('当前订单未支付，是否关闭该订单？',
                                        {
                                            btn: ['确认', '取消'] //按钮
                                        },
                                        function () {
                                            clearInterval(t3);
                                            clearTimeout(t);
                                            layer.closeAll();
                                        },
                                        function () {
                                            layer.closeAll('dialog');
                                            return false;
                                        });
                                }
                            }
                        });
                        return false;
                    }
                });
                countdown = 150;
                settime(data.payno, type);
                myIntervalnum = 120;
                t3=setInterval("myInterval3()", 1000);
            } else {
                layer.alert(result.message);
                return false;
            }
        }
    });
}


function myInterval3() {
    myIntervalnum = myIntervalnum - 1;
    if (myIntervalnum == 0) {
        $("#SucessId").html(myIntervalnum);
        clearInterval(t3);
        clearTimeout(t);
        layer.closeAll();
    } else {
        $("#SucessId").html(myIntervalnum);
    }
}



function settime(payno, type) {
    if (countdown == 0) {
        return;
    } else {
        GetPayResult(payno, type);
        countdown = countdown - 5;
        if (countdown<0) {
            countdown = 0;
        }
    }
    t = setTimeout(function () { settime(payno, type); }, 5000);
}

function GetPayResult(payno, type) {
    var param = {};
    param.orderno = payno;
    param.ordertype = type;
    param.dataType = "json";
    $.ajax({
        url: "/ToolMember/Member/GetPayResult",
        data: param,
        type: "get",
        dataType: "json",
        success: function (data) { 
            if (data.type == 1) {
                clearTimeout(t);
                clearInterval(t3);
                countdown = 0;
                layer.msg('支付成功', { icon: 1 });
                setTimeout(function () { layer.closeAll(); }, 3000);
                setTimeout(function () { parent.location.reload(); }, 3000);
                
            } else {
                if (countdown == 0) {
                    clearTimeout(t);
                    clearInterval(t3);
                    countdown = 0;
                    layer.msg('支付失败', { icon: 2 });
                    setTimeout(function () { layer.closeAll(); }, 3000);
                    //setTimeout(function () { parent.location.reload(); }, 3000);

                }
            }
        }
    });
}

