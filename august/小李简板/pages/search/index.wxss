/* pages/search/index.wxss */

page {
    background: #f0f0f0;
}

.continer {
    background: #fff;
    padding-top: 20rpx;
}

.header {
    width: 94%;
    height: 80rpx;
    margin: 0 auto;
    border: 1px solid #eee;
    box-shadow: 1rpx 1rpx 10rpx 5rpx #eee;
    border-radius: 4px;
    background: #fff;
}

.header input {
    width: 60%;
    height: 80rpx;
    line-height: 80rpx;
    border: none;
    float: left;
    margin-left: 15rpx;
    font-size: 30rpx;
}

.header image {
    width: 35rpx;
    height: 35rpx;
    float: left;
    vertical-align: middle;
    margin-top: 22rpx;
    margin-left: 15rpx;
}

.content {
    width: 100%;
    height: auto;
    background: #fff;
}

.cont {
    width: 100%;
    height: auto;
    box-sizing: border-box;
    background: #fff;
    margin-top: 25rpx;
    padding-top: 20rpx;
}

.cont .list {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #eee;
    border-radius: 6px;
    padding-bottom: 15rpx;
}

.cont .block {
    margin: 30rpx 0;
    font-size: 30rpx;
    display: block;
    margin-left: 40rpx;
}

.cont .h1 {
    display: block;
    width: 100%;
    height: 76rpx;
    border-bottom: 1px solid #eee;
}

.new {
    font-size: 30rpx;
    display: inline-block;
    width: 33%;
    text-align: center;
    position: relative;
}

.color {
    color: #d6695e;
}

.text {
    display: inline-block;
    width: 50%;
    border-bottom: 5rpx solid #e19189;
    position: absolute;
    top: 160%;
    left: 25%;
}

.num {
    font-size: 30rpx;
    display: inline-block;
    width: 33%;
    text-align: center;
    position: relative;
}

.cont .ziliao {
    font-size: 22rpx;
    color: #999;
    margin-right: 15rpx;
}
