/* pages/xqing/index.wxss */

.continer {
    width: 100%;
    height: auto;
    background: #eee;
    overflow: hidden;
}

.header {
    width: 100%;
    height: auto;
    background: #fff;
    box-sizing: border-box;
    padding: 25rpx 25rpx;
}

.header text {
    line-height: 50rpx;
}

.clear {
    clear: both;
}

.header .h1 {
    display: inline-block;
    font-size: 50rpx;
    margin-left: 25rpx;
}

.navigator-hover {
    color: #1b89f4;
    background: #fff;
}

.header .h3 {
    font-size: 20rpx;
    margin-left: 20rpx;
    color: #e65e45;
}

.header .left {
    font-size: 28rpx;
    float: left;
    margin-left: 25rpx;
     color: #505153;
}

.header .right {
    font-size: 28rpx;
    float: right;
}

.header .box {
    margin-left: 25rpx;
    font-size: 22rpx;
    color: #999;
}
.content{
    width: 100%;
    height: auto;
    background: #fff;
}
.cont {
    width: 100%;
    height: auto;
    box-sizing: border-box;
    background: #fff;
    margin-top: 25rpx ;
    padding-top: 20rpx;
}
.cont .list {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #eee;
    border-radius: 6px;
    padding-bottom: 15rpx;
}
.cont .block {
    margin: 30rpx 0;
    font-size: 30rpx;
    display: block;
    margin-left: 40rpx;
}
.cont .h1 {
    display: block;
    width: 100%;
    height: 76rpx;
    border-bottom:1px solid #eee; 
}
.new{
    font-size: 35rpx;
    display: inline-block;
    width: 49%;
    text-align: center;
    position: relative;
}
.color{
    color:#D6695E;
}
.text{
    display: inline-block;
    width: 10%;
    border-bottom: 5rpx solid #E19189;
    position: absolute;
    top:150%;
    left: 45%;
}
.num{
    font-size: 35rpx;
    display: inline-block;
    width: 49%;
    text-align: center;
     position: relative;
}
.cont .ziliao {
    font-size: 22rpx;
    color: #999;
    margin-right: 15rpx;
}
