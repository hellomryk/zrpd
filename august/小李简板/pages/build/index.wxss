/* pages/build/index.wxss */
navigator {
display:inline-block;
}

.continer {
    width: 100%;
    height: auto;
    background: #eee;
    overflow: hidden;
}

.header {
    width: 100%;
    height: auto;
    background: #fff;
    padding: 25rpx 30rpx;
}

.header text {
    line-height: 75rpx;
}

.header image {
    width: 35rpx;
    height: 35rpx;
    /* vertical-align: middle; */
    margin-left: 400rpx;
}

.header .h1 {
    display: block;
    font-weight: 500;
    font-size: 50rpx;
}

.navigator-hover {
    color: #1b89f4;
    background: #fff;
}

.header .h3 {
    font-size: 30rpx;
    color: #505153;
}

.content {
    width: 96%;
    height: auto;
    margin: 0 auto;
    margin-top: 20rpx;
}

.new {
    width: 100%;
    margin: 0 auto;
    margin-bottom: 20rpx;
    background: #fff;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
    border-radius: 6px;
}

.new_one {
    width: 100%;
    height: 180rpx;
    border: 1px dashed #000;
    border-radius: 4px;
    padding: 35rpx 0;
    box-sizing: border-box;
}

.zhuti {
    font-size: 30rpx;
    color: #d25a4d;
    text-align: center;
    line-height: 60rpx;
}

.neirong {
    font-size: 25rpx;
    color: #505153;
    text-align: center;
}

.list_box {
    width: 100%;
    background: #fff;
}

.list_head {
    width: 96%;
    margin: 0 auto;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.list_head image {
    width: 90rpx;
    height: 90rpx;
    float: left;
}

.list_head .h1 {
    width: 60%;
    font-size: 35rpx;
    color: #000;
    float: left;
    margin-left: 15rpx;
}

.list_head .h3 {
    width: 60%;
    font-size: 20rpx;
    color: #999;
    float: left;
    margin-left: 15rpx;
}

.list_head .more {
    font-size: 25rpx;
    color: #999;
    float: right;
    line-height: 0;
}

.clear {
    clear: both;
}

.list {
    width: 95%;
    margin-left: 20rpx;
    padding: 20rpx 15rpx;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.list image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
    vertical-align: middle;
}

.list .h1 {
    font-size: 35rpx;
    color: #000;
    margin-left: 10rpx;
}

.list .h3 {
    font-size: 20rpx;
    color: #999;
    margin-left: 10rpx;
}

.list .more {
    float:right;
    width: 60rpx;
    height: 30rpx;
    color: #fff;
    background: #d25a4d;
    border-radius: 4px;
    font-size: 30rpx;
    text-align: center;
    line-height: 30rpx;
}

.text {
    font-size: 25rpx;
    color: #000;
    margin-top: 30rpx;
}

.time text {
    font-size: 22rpx;
    color: #999;
}
