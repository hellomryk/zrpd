/* pages/zhuanshu/index.wxss */
navigator {
display:inline-block;
}

.continer {
    width: 100%;
    height: auto;
    background: #eee;
    overflow: hidden;
}

.header {
    width: 100%;
    height: auto;
    background: #fff;
    padding: 25rpx 30rpx;
}

.header text {
    line-height: 75rpx;
}

.header .h1 {
    display: block;
    font-weight: 500;
    font-size: 50rpx;
}

.navigator-hover {
    color: #1b89f4;
    background: #fff;
}

.header .h3 {
    font-size: 28rpx;
    color: #505153;
    display: block;
}
.hr {
width: 100%;
height: 5rpx;
border-top: 1rpx solid #636363;
border-bottom: 8rpx solid #636363;
display: block;
}


.content {
    width:100%;
    height: auto;
    margin: 0 auto;
}

.cont {
    width: 100%;
    height: auto;
    box-sizing: border-box;
    background: #fff;
    border-radius: 8px;
    padding-top: 60rpx;
    position: relative;
}
.cont .h1 {
    height: 40rpx;
    line-height: 40rpx;
    display: inline-block;
    font-size: 40rpx;
    margin-left: 25rpx;
    border-left:6rpx solid #D25A4D;
    padding-left: 15rpx;
}

.cont .list {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #eee;
    border-radius: 6px;
    padding-bottom: 15rpx;
}

.cont .h3 {
    font-size: 18rpx;
    margin-left: 20rpx;
    color: #e65e45;
}

.cont .block {
    margin: 30rpx 0;
    font-size: 32rpx;
    display: block;
    padding: 0 25rpx;
    box-sizing: border-box;
    line-height: 50rpx;
}

.cont .ziliao {
    font-size: 22rpx;
    color: #999;
    margin-right: 15rpx;
    float: left;
}
.cont .ziliao1 {
    font-size: 22rpx;
    color: #999;
    margin-right: 15rpx;
    float: right;
    padding-right: 25rpx;
}
.clear{
    clear: both;
}
