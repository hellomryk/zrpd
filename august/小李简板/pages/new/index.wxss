/* pages/new/index.wxss */
page{ background: #eee;}
.continer {
    width: 100%;
    height: auto;
    background: #eee;
    overflow: hidden;
}

.header {
    width: 100%;
    height: auto;
    background: #fff;
    padding: 25rpx 30rpx;
}

.header text {
    line-height: 75rpx;
}

.header .h1 {
    display: block;
    font-weight: 500;
    font-size: 50rpx;
}

.navigator-hover {
    color: #1b89f4;
    background: #fff;
}

.header .h3 {
    font-size: 30rpx;
    color: #505153;
}

.content {
    width: 100%;
    height: auto;
    margin-top: 20rpx;
    background: #fff;
}
.content input{
    width: 96%;
    height: 100rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #eee;
}
.content textarea{
    width: 96%;
    height: 260rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #eee;
    padding: 40rpx 0;
    font-size: 30rpx;
}
.section .h1{
    display: inline-block;
    width: 49%;
    text-align: center;
    font-size: 30rpx;
     padding: 20rpx 0;
}
.section .h3{
    display: inline-block;
    width: 49%;
    text-align: center;
    font-size: 30rpx;
    color: #D25A4D;
    padding: 20rpx 0;

}
